	<%= form_for @patient do |f|%>
<p>
	<%= f.label :name %><br>
	<%= f.text_field :name %>
</p>
<p>	
	<%= f.label :surname %><br>
	<%= f.text_field :surname %>
</p>
<p>
	<%= f.label :disease %><br>
	<%= f.text_field :disease %>
</p>
<p>
	<%= f.label :doctor %>
	<%= f.collection_select  :doctor_id, Doctor.all, :id, :full_name %>
</p>
<p>
	<%= f.label :sickness_past %><br>
	<%= f.text_area :bio %>
</p>
	<%=f.submit %>


<% end -%>
